{
  "manifest_version": 2,

  "name": "Chrome Web Chat",
  "description": "This extension adds a chat to every website you visit",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "Toggle Chat"
  },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["lib/socket.io-1.4.5.js", "lib/jquery-3.1.1.min.js", "js/content.js"],
      "css": ["css/style.css"]
    }
  ]
}
